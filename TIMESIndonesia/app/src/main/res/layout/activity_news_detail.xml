<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isi"
                android:textColor="#1B1A1A"
                android:textSize="@dimen/size_nomer"
                android:id="@+id/txt_judul"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal"
                android:textSize="14sp"
                android:layout_below="@+id/txt_judul"
                android:id="@+id/txt_hari"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29k"
                android:textSize="14sp"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/txt_hari"
                android:layout_below="@id/txt_judul"
                android:drawableStart="@drawable/eye2"
                android:drawablePadding="@dimen/margin_5"
                />
            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:src="@drawable/berita"
                android:layout_below="@id/txt_hari"
                android:id="@+id/img_berita"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isi_berita"
                android:layout_below="@id/img_berita"
                android:id="@+id/txt_isi_berita"
                android:justificationMode="inter_word"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Politik "
                android:layout_below="@id/txt_isi_berita"
                android:id="@+id/btn_1"
                android:background="#E2DCDC"
                android:layout_margin="@dimen/margin_7"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Peristiwa "
                android:id="@+id/btn_2"
                android:layout_below="@id/txt_isi_berita"
                android:layout_toRightOf="@id/btn_1"
                android:background="#E2DCDC"
                android:layout_margin="@dimen/margin_7"/>

            //video
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video Terkait"
                android:id="@+id/txt_video_terkait"
                android:layout_below="@id/btn_1"
                android:textSize="@dimen/size_judul"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_7"/>
            <android.support.v7.widget.CardView
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/card_video"
                android:layout_marginBottom="@dimen/margin_7"
                android:layout_below="@+id/txt_video_terkait">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lainnya"
                        android:textColor="@color/background"
                        android:textSize="@dimen/size_isi"
                        android:id="@+id/lain"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin_10"/>
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lain"
                        tools:targetApi="cupcake">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            //video 1
                            <android.support.v7.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_10"
                                app:cardCornerRadius="15dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/margin_5"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10">
                                    <ImageView
                                        android:layout_width="200dp"
                                        android:layout_height="100dp"
                                        android:src="@drawable/video"
                                        android:id="@+id/img_berita_vd"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/judul2"
                                        android:textSize="@dimen/size_judul"
                                        android:textColor="@color/background"
                                        android:id="@+id/vd_judul"
                                        android:layout_below="@id/img_berita_vd"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/isi2"
                                        android:textSize="@dimen/size_isi"
                                        android:textColor="#000000"
                                        android:id="@+id/vd_isi"
                                        android:layout_below="@+id/vd_judul"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tanggal"
                                        android:textSize="@dimen/size_tgl"
                                        android:layout_below="@+id/vd_isi"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //video 2
                            <android.support.v7.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_10"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:layout_marginTop="@dimen/margin_10"
                                app:cardCornerRadius="15dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10">
                                    <ImageView
                                        android:layout_width="200dp"
                                        android:layout_height="100dp"
                                        android:src="@drawable/video"
                                        android:id="@+id/img_berita2"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/judul2"
                                        android:textSize="@dimen/size_judul"
                                        android:textColor="@color/background"
                                        android:id="@+id/vd_judul2"
                                        android:layout_below="@id/img_berita2"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/isi2"
                                        android:textSize="@dimen/size_isi"
                                        android:textColor="#000000"
                                        android:id="@+id/vd_isi2"
                                        android:layout_below="@+id/vd_judul2"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tanggal"
                                        android:textSize="@dimen/size_tgl"
                                        android:layout_below="@+id/vd_isi2"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //video 3
                            <android.support.v7.widget.CardView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/margin_10"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:layout_marginTop="@dimen/margin_10"
                                app:cardCornerRadius="15dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/margin_10"
                                    android:layout_marginStart="@dimen/margin_10"
                                    android:layout_marginBottom="@dimen/margin_10">
                                    <ImageView
                                        android:layout_width="200dp"
                                        android:layout_height="100dp"
                                        android:src="@drawable/video"
                                        android:id="@+id/img_berita3"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/judul2"
                                        android:textSize="@dimen/size_judul"
                                        android:textColor="@color/background"
                                        android:id="@+id/vd_judul3"
                                        android:layout_below="@+id/img_berita3"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/isi2"
                                        android:textSize="@dimen/size_isi"
                                        android:textColor="#000000"
                                        android:id="@+id/vd_isi3"
                                        android:layout_below="@+id/vd_judul3"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tanggal"
                                        android:textSize="@dimen/size_tgl"
                                        android:layout_below="@+id/vd_isi3"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            //berita terkait

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
