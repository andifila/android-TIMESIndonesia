<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/background"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            android:id="@+id/logo"
            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:src="@drawable/img_logo"
                android:layout_centerInParent="true"
                android:id="@+id/top"
                />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/top"
                    app:srcCompat="@drawable/ic_more_vert_white_24dp"
                    android:layout_centerInParent="true"
                    />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/background"
                    >
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:gravity="center_horizontal|center_vertical">

                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@drawable/button_bunder"
                            android:id="@+id/btnHeadline"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_menu_white_24dp"
                            android:backgroundTint="#E90F3B"
                            android:layout_marginRight="7dp"
                            />
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@drawable/button_bunder"
                            android:id="@+id/btnPopuler"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_flag_white_24dp"
                            android:backgroundTint="#F15121"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="7dp"
                            />
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@drawable/button_bunder"
                            android:id="@+id/btnFokus"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_center_focus_weak_white_24dp"
                            android:backgroundTint="#F1AC21"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="7dp"
                            />
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@drawable/button_bunder"
                            android:id="@+id/btnFoto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_photo_library_white_24dp"
                            android:backgroundTint="#19A7D3"
                            android:layout_marginRight="7dp"
                            android:layout_marginLeft="7dp"/>
                        <ImageButton
                            android:layout_gravity="center"
                            android:background="@drawable/button_bunder"
                            android:id="@+id/btnIndeks"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_format_list_bulleted_white_24dp"
                            android:backgroundTint="#39E61B"
                            android:layout_marginLeft="7dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:gravity="center_horizontal|center_vertical"
                        >
                        <TextView
                            android:text="Headline"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:layout_marginRight="7dp"
                            />
                        <TextView
                            android:text="Populer"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            />
                        <TextView
                            android:text="Fokus"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            />
                        <TextView
                            android:text="Foto"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            />
                        <TextView
                            android:text="Indeks"
                            android:textColor="#fff"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            />
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_below="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Trending"
                        android:textSize="25dp"
                        android:id="@+id/tren"
                        android:textColor="#000000"/>
                    <android.support.v7.widget.CardView
                        android:layout_below="@+id/tren"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        app:cardCornerRadius="15dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:id="@+id/nomer1"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:text="1."
                                android:textSize="25dp"
                                android:textColor="@color/background"
                                />
                            <android.support.v7.widget.CardView
                                android:id="@+id/card1"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_toRightOf="@id/nomer1"
                                app:cardCornerRadius="5dp"
                                >
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/judul1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peristiwa"
                                        android:textSize="20dp"
                                        android:textColor="@color/background"
                                        />
                                    <TextView
                                        android:id="@+id/isi1"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/judul1"
                                        android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/isi1"
                                        android:text="Rabu, 31 Juli 2019"
                                        android:textSize="8dp"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_toRightOf="@+id/isi1"
                                        android:src="@drawable/berita"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //CARD 2
                            <TextView
                                android:id="@+id/nomer2"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical"
                                android:text="2."
                                android:textSize="25dp"
                                android:textColor="@color/background"
                                android:layout_below="@id/nomer1"
                                />
                            <android.support.v7.widget.CardView
                                android:id="@+id/card2"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_toRightOf="@id/nomer1"
                                app:cardCornerRadius="5dp"
                                android:layout_below="@id/card1"
                                >
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/judul2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peristiwa"
                                        android:textSize="20dp"
                                        android:textColor="@color/background"
                                        />
                                    <TextView
                                        android:id="@+id/isi2"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/judul2"
                                        android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/isi2"
                                        android:text="Rabu, 31 Juli 2019"
                                        android:textSize="8dp"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/berita"
                                        android:layout_toRightOf="@+id/isi2"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //CARD 3
                            <TextView
                                android:id="@+id/nomer3"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical"
                                android:text="3."
                                android:textSize="25dp"
                                android:textColor="@color/background"
                                android:layout_below="@id/nomer2"
                                />
                            <android.support.v7.widget.CardView
                                android:id="@+id/card3"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_toRightOf="@id/nomer1"
                                app:cardCornerRadius="5dp"
                                android:layout_below="@id/card2"
                                >                             >
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/judul3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peristiwa"
                                        android:textSize="20dp"
                                        android:textColor="@color/background"
                                        />
                                    <TextView
                                        android:id="@+id/isi3"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/judul3"
                                        android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/isi3"
                                        android:text="Rabu, 31 Juli 2019"
                                        android:textSize="8dp"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/berita"
                                        android:layout_toRightOf="@+id/isi3"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //CARD 4
                            <TextView
                                android:id="@+id/nomer4"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical"
                                android:text="4."
                                android:textSize="25dp"
                                android:textColor="@color/background"
                                android:layout_below="@id/nomer3"
                                />
                            <android.support.v7.widget.CardView
                                android:id="@+id/card4"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_toRightOf="@id/nomer1"
                                app:cardCornerRadius="5dp"
                                android:layout_below="@id/card3"
                                >
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/judul4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peristiwa"
                                        android:textSize="20dp"
                                        android:textColor="@color/background"
                                        />
                                    <TextView
                                        android:id="@+id/isi4"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/judul4"
                                        android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/isi4"
                                        android:text="Rabu, 31 Juli 2019"
                                        android:textSize="8dp"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/berita"
                                        android:layout_toRightOf="@+id/isi4"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                            //card 5
                            <TextView
                                android:id="@+id/nomer5"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="15dp"
                                android:gravity="center_vertical"
                                android:text="5."
                                android:textSize="25dp"
                                android:textColor="@color/background"
                                android:layout_below="@id/nomer4"
                                />
                            <android.support.v7.widget.CardView
                                android:id="@+id/card5"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_toRightOf="@id/nomer1"
                                app:cardCornerRadius="5dp"
                                android:layout_below="@id/card4"
                                >
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    >
                                    <TextView
                                        android:id="@+id/judul5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Peristiwa"
                                        android:textSize="20dp"
                                        android:textColor="@color/background"
                                        />
                                    <TextView
                                        android:id="@+id/isi5"
                                        android:layout_width="170dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/judul5"
                                        android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                        android:textColor="#000000"
                                        android:textSize="12dp"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/isi5"
                                        android:text="Rabu, 31 Juli 2019"
                                        android:textSize="8dp"
                                        />
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="25dp"
                                        android:layout_marginBottom="10dp"
                                        android:src="@drawable/berita"
                                        android:layout_toRightOf="@+id/isi5"
                                        />
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</android.support.constraint.ConstraintLayout>