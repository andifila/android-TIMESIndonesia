                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                            //video 3

                            <android.support.v7.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
