                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="100dp"
                                android:src="@drawable/berita"
                                android:layout_toRightOf="@+id/judul5"
                                android:layout_marginLeft="100dp"
                                />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            //videos
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textSize="27dp"
                android:id="@+id/txt_video"
                android:textColor="#1B1A1A"
                android:layout_below="@+id/cv_tren"
                android:layout_margin="15dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                android:layout_below="@+id/txt_video"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:id="@+id/cv_video">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lainnya"
                        android:layout_alignParentTop="true"
                        android:gravity="right"
                        android:textColor="@color/background"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/lengkap"/>
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lengkap"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.v7.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="15dp"
                                app:cardCornerRadius="15dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:src="@drawable/video"
                                        android:id="@+id/youtube_player"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TimesVlog"
                                        android:textColor="@color/background"
                                        android:textSize="20dp"
                                        android:id="@+id/v_judul"
                                        android:layout_below="@id/youtube_player"
                                        android:layout_margin="10dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Yuk Belajar Sejarah Sepuasnya di
                                        Museum Ganesya Hawai Waterpark"
                                        android:textSize="14dp"
                                        android:textColor="#000000"
                                        android:id="@id/v_isi"
                                        android:layout_below="@+id/v_judul"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginBottom="10dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rabu, 31 Juli 2019 - 14:55"
                                        android:textSize="12dp"
                                        android:layout_below="@+id/v_isi"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_marginBottom="10dp"/>
                                </RelativeLayout>
                            </android.support.v7.widget.CardView>

                            //video 2
                            <android.support.v7.widget.CardView
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginRight="15dp"
                                app:cardCornerRadius="15dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:src="@drawable/video"
                                        android:id="@+id/youtube_player2"
                                        />
                                    <TextView
