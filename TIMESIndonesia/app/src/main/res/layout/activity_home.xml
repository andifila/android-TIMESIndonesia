<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    //logo atas
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/background"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:id="@+id/logo"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:src="@drawable/img_logo"
            android:layout_centerInParent="true"
            android:id="@+id/top"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/top"
            app:srcCompat="@drawable/ic_more_vert_white_24dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/konten"
        android:layout_below="@id/logo"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            //button bunder
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/background"
                android:id="@+id/tombol_bulat"
                >
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/button_bunder"
                        android:id="@+id/btnHeadline"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_menu_white_24dp"
                        android:backgroundTint="#E90F3B"
                        android:layout_marginRight="7dp"
                        />
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/button_bunder"
                        android:id="@+id/btnPopuler"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_flag_white_24dp"
                        android:backgroundTint="#F15121"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        />
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/button_bunder"
                        android:id="@+id/btnFokus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_center_focus_weak_white_24dp"
                        android:backgroundTint="#F1AC21"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"
                        />
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/button_bunder"
                        android:id="@+id/btnFoto"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gallery"
                        android:backgroundTint="#19A7D3"
                        android:layout_marginRight="7dp"
                        android:layout_marginLeft="7dp"/>
                    <ImageButton
                        android:layout_gravity="center"
                        android:background="@drawable/button_bunder"
                        android:id="@+id/btnIndeks"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/index"
                        android:backgroundTint="#39E61B"
                        android:layout_marginLeft="7dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:gravity="center_horizontal|center_vertical"
                    >
                    <TextView
                        android:text="Headline"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_marginRight="7dp"
                        />
                    <TextView
                        android:text="Populer"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        />
                    <TextView
                        android:text="Fokus"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        />
                    <TextView
                        android:text="Foto"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        />
                    <TextView
                        android:text="Indeks"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        />
                </TableRow>
            </TableLayout>

            //trending
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending"
                android:textSize="27dp"
                android:id="@+id/tren"
                android:textColor="#1B1A1A"
                android:layout_below="@+id/tombol_bulat"
                android:layout_margin="15dp"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="13dp"
                android:layout_below="@+id/tren"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:id="@+id/cv_tren"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:text="1."
                        android:textColor="@color/background"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/nomer1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"/>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/card1"
                        android:layout_toRightOf="@id/nomer1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="15dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peristiwa"
                                android:textSize="20dp"
                                android:textColor="@color/background"
                                android:id="@+id/judul1"
                                />
                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                        Ruang Sekda Jawa Barat"
                                android:textColor="#000000"
                                android:id="@+id/isi1"
                                android:textSize="14dp"
                                android:layout_below="@+id/judul1"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rabu, 31 Juli 2019"
                                android:textSize="12dp"
                                android:layout_below="@+id/isi1"/>
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="100dp"
                                android:src="@drawable/berita"
                                android:layout_alignParentEnd="true"
                                android:layout_toRightOf="@+id/judul1"
                                android:layout_marginLeft="100dp"
                                />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    //card 2
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:text="2."
