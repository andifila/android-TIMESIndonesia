                                android:layout_below="@+id/judul3"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rabu, 31 Juli 2019"
                                android:textSize="12dp"
                                android:layout_below="@+id/isi3"/>
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="100dp"
                                android:src="@drawable/berita"
                                android:layout_toRightOf="@+id/judul3"
                                android:layout_marginLeft="100dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    //card 4
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:text="4."
                        android:textColor="@color/background"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/angka4"
                        android:layout_below="@id/angka3"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical"
                        />
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card4"
                        android:layout_toRightOf="@id/angka4"
                        android:layout_below="@id/card3"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="15dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
