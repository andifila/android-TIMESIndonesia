                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peristiwa"
                                android:textSize="20dp"
                                android:textColor="@color/background"
                                android:id="@+id/judul4"
                                />
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:text="Usai Ditetapkan Sebagai Tersangka, KPK RI Geledah
                                                Ruang Sekda Jawa Barat"
                                android:textColor="#000000"
                                android:id="@+id/isi4"
                                android:textSize="14dp"
                                android:layout_below="@+id/judul4"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rabu, 31 Juli 2019"
                                android:textSize="12dp"
                                android:layout_below="@+id/isi4"/>
                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="100dp"
                                android:src="@drawable/berita"
                                android:layout_toRightOf="@+id/judul4"
                                android:layout_marginLeft="100dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                    //card 5
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:text="5."
                        android:textColor="@color/background"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/angka5"
                        android:layout_below="@id/angka4"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        />
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/card5"
                        android:layout_toRightOf="@id/angka5"
                        android:layout_below="@id/card4"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="15dp"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Peristiwa"
                                android:textSize="20dp"
                                android:textColor="@color/background"
                                android:id="@+id/judul5"
