<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rltv_modal"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/layout_melengkung"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">

    <LinearLayout
        android:id="@+id/fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_favorite_red_24dp" />

        <TextView
            android:id="@+id/txt_fav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="@string/favorit"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_settings_red_24dp" />

        <TextView
            android:id="@+id/txt_pengaturan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:gravity="center_vertical"
            android:text="@string/pengaturan"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />
    </LinearLayout>

</LinearLayout>